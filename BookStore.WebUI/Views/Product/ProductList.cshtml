@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Kitap Adı</th>
            <th>Stok Sayısı</th>
            <th>Fiyat</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ProductId
                </td>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.ProductStock
                </td>
                <td>
                    @item.ProductPrice ₺
                </td>
                <td>
                    <a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-warning">Güncelle</a>
                </td>
                <td>
                    <a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </table>
    <a href="/Product/CreateProduct/" class="btn btn-primary">Ürün Ekle</a>

</div>
